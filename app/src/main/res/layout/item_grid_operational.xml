<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="5dp"
    android:background="@drawable/bg_button"
    android:layout_margin="4dp">

    <ImageView
        android:id="@+id/iv_operational"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_margin="8dp"
        android:scaleType="centerCrop"
        android:src="@color/colorAccent"/>

    <TextView
        android:id="@+id/tv_operational_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/nama_mobil"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:textColor="@color/colorBlack"/>

    <TextView
        android:id="@+id/tv_operational_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="AB xxxx XX"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:textStyle="bold"
        android:textColor="@color/colorBlack"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Region: "/>

        <TextView
            android:id="@+id/tv_operational_region"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Boyolali 1"/>
    </LinearLayout>
</LinearLayout>